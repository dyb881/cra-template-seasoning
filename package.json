{
  "name": "cra-template-seasoning",
  "description": "基于cra-template-pwa和seasoning生成的业务模版",
  "version": "1.0.0",
  "author": "dyb881",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dyb881/cra-template-seasoning"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna:publish": "lerna publish",
    "push": "lerna publish",
    "changelog": "lerna-changelog",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,md}\"",
    "to:packages": "node ./src/to.packages.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,html,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "fs-extra": "^9.0.1",
    "npm-check-updates": "^10.2.3"
  }
}
